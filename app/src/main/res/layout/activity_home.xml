<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/renxing"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:text="服务工号："
                    android:textSize="10sp"
                    android:textColor="#fff"
                    />

                <TextView
                    android:id="@+id/fuwuhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="007"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    />
                <ImageView
                    android:id="@+id/shezhi"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/selector_image_gengduo"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#444"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="台    号："
                        android:textSize="12dp"
                        android:textColor="@color/text_color"

                        />

                    <TextView
                        android:id="@+id/tai_hao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="101"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人    数："
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/text_color"

                        />

                    <TextView
                        android:id="@+id/ren_shu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/text_color"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:text="订单号："
                    android:textSize="12dp"
                    android:textColor="@color/text_color"

                    />

                <TextView
                    android:id="@+id/dingdanhao"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:text="2016121512450101"
                    android:textColor="@color/text_color"
                    />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="#444"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ll_caipin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_caipin"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_image_caipin"
                    android:layout_marginRight="15dp"
                    />
                <TextView
                    android:id="@+id/tv_caipin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:textColor="@drawable/selector_text_color"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444"
                />
            <LinearLayout
                android:id="@+id/ll_jindu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_jindu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_image_jindu"
                    android:layout_marginRight="15dp"
                    />
                <TextView
                    android:id="@+id/tv_jindu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进度"
                    android:textColor="@drawable/selector_text_color"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444"
                />
            <LinearLayout
                android:id="@+id/ll_jiezhang"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_jiezhang"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_image_jiezhang"
                    android:layout_marginRight="15dp"
                    />
                <TextView
                    android:id="@+id/tv_jiezhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结账"
                    android:textColor="@drawable/selector_text_color"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444"
                />
            <LinearLayout
                android:id="@+id/ll_gengduo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_gengduo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_image_gengduo"
                    android:layout_marginRight="15dp"
                    />
                <TextView
                    android:id="@+id/tv_gengduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="@drawable/selector_text_color"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <LinearLayout
                    android:id="@+id/ll_dingdan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_margin="5dp"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/selector_image_dingdan"
                        />
                    <TextView
                        android:id="@+id/tv_dingdan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单"
                        android:textColor="@drawable/selector_text_color"
                        android:layout_marginTop="5dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_fuwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_margin="5dp"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/fuwu"
                        android:background="@drawable/selector_image_dingdan"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务"
                        android:textColor="@drawable/selector_text_color"
                        android:layout_marginTop="5dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_dish_show"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <LinearLayout

                android:id="@+id/ll_recai"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_recai"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_image_recai"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/tv_recai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热菜"
                    android:textColor="@drawable/selector_text_color"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_liangcai"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_liangcai"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_image_liangcai"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/tv_liangcai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="凉菜"
                    android:textColor="@drawable/selector_text_color"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tanglei"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_tanglei"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_image_tanglei"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/tv_tanglei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="汤类"
                    android:textColor="@drawable/selector_text_color"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_yinliao"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_yinliao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_image_yinliao"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/tv_yinliao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饮料"
                    android:textColor="@drawable/selector_text_color"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_qita"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_qita"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_image_qita"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/tv_qita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:textColor="@drawable/selector_text_color"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/ll_sousuo"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                >
                <EditText
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/input_sousuo"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sousuo"
                    android:layout_marginRight="26dp"
                    />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_gengduo_show"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:visibility="gone"
            >
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_gengduo_chakan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="查看订单"
                android:gravity="center_horizontal"
                android:textColor="@drawable/selector_text_color"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_gengduo_huantai"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="换台并台"
                android:gravity="center_horizontal"
                android:textColor="@drawable/selector_text_press"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_gengduo_shujugengxin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="数据更新"
                android:gravity="center_horizontal"
                android:textColor="@drawable/selector_text_press"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#cccccccc"


            >
        </android.support.v4.view.ViewPager>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#cccccccc"
            android:visibility="gone"
            >
        </android.support.v4.view.ViewPager>



    </LinearLayout>

</LinearLayout>
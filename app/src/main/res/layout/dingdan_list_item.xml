<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_item_id"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:text="1"
            android:background="#f9f9f9"
            android:gravity="center"
            android:textSize="@dimen/textSize_12"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="match_parent"
            android:text="辣炒么锦藕丁"
            android:textSize="@dimen/textSize_12"
            android:gravity="center"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:text="16.0"
            android:textSize="@dimen/textSize_12"
            android:background="#f9f9f9"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_left_jian"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/sanjiao_left"
                />
            <TextView
                android:id="@+id/tv_shuliang"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="1"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/btnchakan"
                />
            <ImageView
                android:id="@+id/iv_right_jia"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/sanjiao_right"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/jiage"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:text="16.0"
            android:gravity="center"
            android:textSize="@dimen/textSize_12"
            android:background="#f9f9f9"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="加酒"
            android:gravity="center"
            android:textSize="@dimen/textSize_12"
            />
        <TextView
            android:id="@+id/tv_zhonglei"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:text="热菜"
            android:textSize="@dimen/textSize_12"
            android:gravity="center"
            android:background="#f9f9f9"
            />
        <ImageView
            android:id="@+id/tv_shanchu"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="25dp"
            android:src="@drawable/iv_shanchu"
            android:layout_gravity="center"
                        />

    </LinearLayout>
</LinearLayout>
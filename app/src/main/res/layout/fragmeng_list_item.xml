<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:descendantFocusability="blocksDescendants"
    >
    <RelativeLayout
        android:id="@+id/fl_list_item"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/recai1"/>
        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辣炒什锦藕丁"
            android:textColor="#444"
            android:textSize="10sp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="bottom"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_dish_name"
                android:text="RMB"
                android:textColor="#f98000"
                android:textSize="8sp"
                />
            <TextView
                android:id="@+id/tv_dish_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="58/份"
                android:layout_marginLeft="5dp"
                android:textColor="#f98000"
                android:textSize="12sp"
                />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_jiacai"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="6dp"
        android:layout_alignRight="@id/fl_list_item"
        android:layout_alignBottom="@id/fl_list_item"
        android:background="@drawable/btn_switch_item"
        />

</RelativeLayout>